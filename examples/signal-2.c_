#include <stm32f4_discovery.h>
#include <os.h>

sig_id sig = SIG_CREATE(0);

void consumer()
{
	unsigned x;

	x = sig_wait(sig, sigAll);
	LEDs = SIGSET(x);
}

void producer()
{
	unsigned x = 0;

	for (;;)
	{
		tsk_delay(SEC);
		sig_give(sig, x);
		x = (x + 1) % 4;
	}
}

int main()
{
	LED_Init();

	tsk_start(TSK_CREATE(consumer));
	tsk_start(TSK_CREATE(producer));
	tsk_sleep();
}
