#include <stm32f4_discovery.h>
#include <os.h>

msg_t msg = MSG_INIT(1);

void slave()
{
	unsigned x;

	for (;;)
	{
		msg_wait(&msg, &x);

		LEDs = x;
	}
}

void master()
{
	unsigned x = 0;

	for (;;)
	{
		tsk_delay(SEC);

		msg_give(&msg, ++x);
	}
}

tsk_t sla = TSK_INIT(slave);
tsk_t mas = TSK_INIT(master);

int main()
{
	LED_Config();

	sys_init();
	tsk_start(&sla);
	tsk_start(&mas);
	tsk_stop();
}
