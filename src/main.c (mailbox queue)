#include <stm32f4_discovery.h>
#include <os.h>

box_t box = BOX_INIT(1, sizeof(unsigned));

void slave()
{
	unsigned x;

	for (;;)
	{
		box_wait(&box, &x);

		LEDs = x;
	}
}

void master()
{
	unsigned x = 0;

	for (;;)
	{
		tsk_delay(SEC);

		x++;

		box_give(&box, &x);
	}
}

tsk_t sla = TSK_INIT(slave);
tsk_t mas = TSK_INIT(master);

int main()
{
	LED_Config();

	sys_init();
	tsk_start(&sla);
	tsk_start(&mas);
	tsk_stop();
}
